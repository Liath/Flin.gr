@import 'colors'
html
  overflow-y:scroll
body
  background-color: body-bg-c

.navbar-inverse .navbar-inner
  height: 100px
  background-image: none
  border-bottom-width:4px
  border-color: darken(header-bg-c,15)
  background-color:header-bg-c
  z-index:3
.navbar-inverse .navbar-inner .container
  padding:30px
.navbar-inverse .brand
  color:title-c
  text-shadow:none
  font-size:42pt
.navbar-inverse .brand:hover
  color:title-hover-c
#title-caption
  color:title-caption-c
  vertical-align: -24px
  font-size:20pt
  white-space:nowrap

#content
  background-color:content-bg-c
  background-position:center -150px
  min-height:262px  

#spacer
  min-height:100px
  
#content, #footer
  z-index:2
  border-width:0px
  border-style: solid
  border-left-width:2px
  border-right-width:2px
  border-bottom-width:2px
  border-color:content-border-c
  
#footer
  text-align:center
  background-color:footer-bg-c
  color:footer-c
  font-size:8pt
  line-height:14px

#footer .row-fluid .span12 a
  color:#FFB629
  vertical-align:bottom

#footer .row-fluid .span12
  margin:10px

#background
  display:none
  z-index:1
  position: absolute;
  bottom: 0px;
  height: 110px;
  width: 100%;
  background: #addd00;
  background: -webkit-linear-gradient(top,  #addd00 0%,#addd00 17%,#017000 100%);