@import 'colors'
html
  overflow-y:scroll
body
  background-color: body-bg-c

.navbar-inverse .navbar-inner
  min-height: 100px
  background-image: none
  border-bottom-width:4px
  border-color: darken(header-bg-c,15)
  background-color:header-bg-c
.navbar-inverse .navbar-inner .container
  padding:30px
.navbar-inverse .brand
  color:title-c
  text-shadow:none
  font-size:42pt
.navbar-inverse .brand:hover
  color:title-hover-c
#title-caption
  color:title-caption-c
  vertical-align: -24px
  font-size:24pt

#content
  background-color:content-bg-c
  background-position:center -150px
  min-height:262px

#spacer
  min-height:150px
  
#content, #footer
  border-width:0px
  border-style: solid
  border-left-width:2px
  border-right-width:2px
  border-bottom-width:2px
  border-color:content-border-c
  
#footer
  text-align:center
  background-color:footer-bg-c
  color:footer-c

#footer .row-fluid .span12
  margin:10px
