extends layout
block css
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  .row-fluid
    .span2
    .span4
      .pills
        .row-fluid.pill-heading
          .span12
            span.pill-label 
              i.icon-arrow-up.icon-white
              | Send File
        .row-fluid.pill-body
          .span12
            a.btn-block.btn-primary.span12(href='/channel') Click to Begin
    .span4
      .pills
        .row-fluid.pill-heading
          .span12
            span.pill-label 
              i.icon-arrow-down.icon-white
              | Recieve File
        .row-fluid.pill-body
          #input-holder.span12
            form.input-append.span12(method="GET", action="/channel/")
              input.span12(required,placeholder='Enter Sender ID',name="c")
              button.btn.btn-small(type='submit')
                i.icon-white.icon-search
  hr.bs-docs-separator
